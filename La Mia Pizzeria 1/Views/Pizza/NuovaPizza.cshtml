@{
    Layout = null;
}

@model Pizza
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
</head>
<body>
    <nav class="navbar bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                <img src="https://freesvg.org/img/1502140004.png" alt="Logo" width="60" height="50" class="d-inline-block align-text-top">
                Pizzeria
            </a>

        </div>
    </nav>
    <h1 class="text-center mt-5">Inserisci una nuova pizza</h1>

<div class="container">
    <form asp-controller="Pizza" asp-action="NuovaPizza">

        @Html.AntiForgeryToken()
        <div class="mb-3">
            <label>Inserire nome per la pizza:</label>
            <input asp-for="Title" type="text" class="form-control"/>
                <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label>Inserire descrizione per la pizza:</label>
            <input asp-for="Description" type="text" class="form-control"/>

        </div>
                <div class="mb-3">
            <label>Inserire prezzo per la pizza:</label>
            <input asp-for="Price" type="text" class="form-control"/>
                <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label>Inserire immagine per la pizza:</label>
            <input asp-for="Image" type="text" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Invia</button>
            <a class="btn btn-primary col-1" href="@Url.Action("Index", "Pizza" )" role="button">Home</a>
    </form>
</div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
</body>
</html>