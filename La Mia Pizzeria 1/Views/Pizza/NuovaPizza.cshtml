@model Pizza

<div class="container">
    <form asp-controller="Pizza" asp-action="NuovaPizza">

        @Html.AntiForgeryToken()
        <div class="mb-3">
            <label>Inserire nome per la pizza:</label>
            <input asp-for="Title" type="text" class="form-control"/>
        </div>
        <div class="mb-3">
            <label>Inserire descrizione per la pizza:</label>
            <input asp-for="Description" type="text" class="form-control"/>
        </div>
                <div class="mb-3">
            <label>Inserire prezzo per la pizza:</label>
            <input asp-for="Price" type="text" class="form-control"/>
        </div>
        <div class="mb-3">
            <label>Inserire immagine per la pizza:</label>
            <input asp-for="Image" type="text" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Invia</button>
    </form>
</div>
